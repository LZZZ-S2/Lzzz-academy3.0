  <main class="content-main">
    <section class="contact-section">
      <h2>Contact Us</h2>
      <p>Got questions? Want to join the legend himself? Reach out to us:</p>
      <form id="contactForm" onsubmit="event.preventDefault(); alert('Thanks for reaching out! Weâ€™ll get back to you soon.'); this.reset();">
        <label for="name">Name:</label><br/>
        <input type="text" id="name" required /><br/><br/>
        <label for="email">Email:</label><br/>
        <input type="email" id="email" required /><br/><br/>
        <label for="message">Message:</label><br/>
        <textarea id="message" rows="5" required></textarea><br/><br/>
        <button type="submit" class="btn">Send</button>
      </form>
    </section>
